@page "/SignatureSuperPage/{vacanteId}"
@inject IJSRuntime JS;

<div class="card mt-1">
    <div class="card-body p-2 text-center">
        <div class="d-flex flex-row align-items-center">
            <RadzenImage Path="css/imgs/Staraward.png" Class="rz-border-radius-10 float-start me-3" Style="width: 80px; height: 80px;" />
            <div class="d-flex bd-highlight">
                <p class="fw-bold mb-0"><i class="fas fa-clock"></i> • FIRMA DEL SUPERVISOR</p>
            </div>
        </div>
    </div>
</div>
<img src="css/imgs/image.png" Class="end-text" Style="width: 150px; height: 100px;" />

<form class="signature-pad-form" @onsubmit="@(e => Enviar())">
    <p>FIRMA</p>
    <canvas height="100" width="300" class="signature-pad"></canvas>
    <p>
        <a href="#" class="clear-button">LIMPIAR</a>
    </p>
    <button class="submit-button" @onclick="@(args => Enviar())" type="submit">ENVIAR</button>
</form>
@code {
    [Parameter]
    public string VacanteId { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadCanvas");
        }
    }

    private void Enviar()
    {
        
    }

}
