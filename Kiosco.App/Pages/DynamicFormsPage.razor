<div style="overflow: scroll; height: 750px;">
    <table class="table table-sm table-hover table-bordered mt-1">
        <thead class="bg-blue-cau text-center">
            <tr>
                <th scope="col">Form ID</th>
                <th scope="col">Module</th>
                <th scope="col">Value</th>
                <th scope="col">Type</th>
                <th scope="col">Create Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (order != null)
            {
                @foreach (var item in order)
                {
                    <tr>
                        <td>@item.FormID</td>
                        <td>@item.Module</td>
                        <td>@item.Value</td>
                        <td>@item.Type</td>
                        <th class="text-nowrap">@item.CreateDate.ToString("yyyy-MM-dd")</th>
                        <td>
                            <a href='/DynamicForms/AddDynamicForms/@item.FormID'>Edit</a>  |
                            <a href='/employee/delete/@item.FormID'>Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

