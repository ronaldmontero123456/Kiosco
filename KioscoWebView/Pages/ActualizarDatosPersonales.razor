@page "/ActualizarDatosPersonales"

<div class="card mt-1">
    <div class="card-body p-2 text-center">
        <div class="d-flex flex-row align-items-center">
            <RadzenImage Path="css/imgs/EncuestaIcon.png" Class="rz-border-radius-10 float-start me-3" Style="width: 50px; height: 40px;" />
              <div class="d-flex bd-highlight">
                   <p class="fw-bold mb-0"><i class="fas fa-clock"></i> • Formulario Actualización Datos del Personal</p>
              </div>
        </div>      
    </div>
</div>

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

@if (order == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenTemplateForm Data="@order" Submit="@((Order args) => { Submit(args); })">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <RadzenFieldset Text="DATOS PERSONALES">
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Nombre:" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Apellidos:" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Números Telefónicos:" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox style="width: 100%;" Name="CardHolder" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Email:"/>
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox style="width: 100%;" Name="CardHolder" />
                        </div>
                    </div>
                </RadzenFieldset>
                <RadzenFieldset>
                    <RadzenTabs SelectedIndex="0">
                        <Tabs>
                            <RadzenTabsItem Text="Billing Address">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-4 align-items-center d-flex">
                                            <RadzenLabel Text="Dirección" />
                                        </div>
                                        <div class="col-md-8">
                                            <RadzenTextBox style="width: 100%;" Name="City" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 align-items-center d-flex">
                                            <RadzenLabel Text="Provincia">
                                            </RadzenLabel>
                                        </div>
                                        <div class="col-md-8">
                                            <RadzenTextBox style="width: 100%;" Name="Address1" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 align-items-center d-flex">
                                            <RadzenLabel Text="Municipio" />
                                        </div>
                                        <div class="col-md-8">
                                            <RadzenTextBox style="width: 100%;" Name="Address2" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 align-items-center d-flex">
                                            <RadzenLabel Text="Sector" />
                                        </div>
                                        <div class="col-md-8">
                                            <RadzenTextBox style="width: 100%;" Name="State" />
                                        </div>
                                    </div>
                                </div>
                            </RadzenTabsItem>
                        </Tabs>
                    </RadzenTabs>
                </RadzenFieldset>
            </div>
            <div class="col-md-6">
                <RadzenFieldset Text="ESTADO CIVIL">
                    <div class="row">
           
                        <div class="col-md-50">
                             <RadzenRadioButtonList @bind-Value=@value TValue="int" Orientation="Orientation.Vertical">
                                <Items>
                                    <RadzenRadioButtonListItem Text="Soltero (a)" Value="1" />
                                    <RadzenRadioButtonListItem Text="Casado (a)" Value="2" />
                                    <RadzenRadioButtonListItem Text="Unión Libre" Value="3" />
                                    <RadzenRadioButtonListItem Text="Divorciado (a)" Value="4" />
                                    <RadzenRadioButtonListItem Text="Viudo (a)" Value="5" />
                                </Items>
                            </RadzenRadioButtonList>
                        </div>
                    </div>
                </RadzenFieldset>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel" />
            </div>
        </div>
    </div>
    </RadzenTemplateForm>
}

